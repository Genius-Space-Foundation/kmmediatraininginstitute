# =============================================================================
# KM Media Training Institute - Environment Configuration
# =============================================================================
# This file contains all environment variables for the application
# Copy this file to .env for local development
# Never commit .env files to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name and Version
APP_NAME=KM Media Training Institute
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Domain Configuration
DOMAIN=kmmediatraininginstitute.com
WWW_DOMAIN=www.kmmediatraininginstitute.com
API_DOMAIN=api.kmmediatraininginstitute.com
STAGING_DOMAIN=staging.kmmediatraininginstitute.com

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Settings
PORT=5000
NODE_ENV=development
HOST=localhost

# CORS Configuration
CORS_ORIGIN_DEV=http://localhost:3000,http://localhost:3001
CORS_ORIGIN_PROD=https://kmmediatraininginstitute.com,https://www.kmmediatraininginstitute.com
CORS_CREDENTIALS=true

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=kmmediatraininginstitute.com
JWT_AUDIENCE=kmmediatraininginstitute-users

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Database
DB_PATH=./database.sqlite
DB_MIGRATIONS_PATH=./migrations
DB_BACKUP_PATH=./backups

# Database Connection Settings
DB_TIMEOUT=30000
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=1

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Specific Rate Limits
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_REQUESTS=5
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# CLIENT CONFIGURATION
# =============================================================================

# React App Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_NAME=KM Media Training Institute
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# API Endpoints
REACT_APP_AUTH_API=/api/auth
REACT_APP_COURSES_API=/api/courses
REACT_APP_REGISTRATIONS_API=/api/registrations
REACT_APP_ENQUIRY_API=/api/enquiry
REACT_APP_STORIES_API=/api/stories
REACT_APP_TRAINERS_API=/api/trainers

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self'"
CSP_CONNECT_SRC="'self'"

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
SESSION_MAX_AGE=86400000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Service (Optional - for future use)
EMAIL_ENABLED=false
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@kmmediatraininginstitute.com
EMAIL_FROM_NAME=KM Media Training Institute

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File Upload Settings
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads
UPLOAD_TEMP_PATH=./uploads/temp

# Image Processing
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85
IMAGE_FORMATS=jpg,jpeg,png,webp

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_FORMAT=combined

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Analytics (Optional - for future use)
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google
ANALYTICS_TRACKING_ID=GA_TRACKING_ID

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_CHECK_PERIOD=600

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Notification Settings
NOTIFICATIONS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=false
SMS_NOTIFICATIONS_ENABLED=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development Settings
DEBUG_ENABLED=true
DEBUG_LEVEL=info
HOT_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true

# Testing Configuration
TEST_DATABASE_PATH=./test-database.sqlite
TEST_TIMEOUT=10000
COVERAGE_ENABLED=true
COVERAGE_THRESHOLD=80

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=kmmedia/kmmedia-course-registration
DOCKER_TAG=latest

# Deployment URLs
PRODUCTION_URL=https://kmmediatraininginstitute.com
STAGING_URL=http://staging.kmmediatraininginstitute.com
API_PRODUCTION_URL=https://api.kmmediatraininginstitute.com
API_STAGING_URL=http://api-staging.kmmediatraininginstitute.com

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Payment Gateway (Optional - for future use)
PAYMENT_ENABLED=false
PAYMENT_PROVIDER=stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Social Media (Optional - for future use)
SOCIAL_LOGIN_ENABLED=false
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups
BACKUP_COMPRESSION=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Performance Settings
COMPRESSION_ENABLED=true
GZIP_LEVEL=6
BROTLI_ENABLED=true
BROTLI_LEVEL=4

# Memory Management
MAX_MEMORY_USAGE=512
GARBAGE_COLLECTION_INTERVAL=300000

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Production Overrides (uncomment for production)
# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret
# CORS_ORIGIN_PROD=https://kmmediatraininginstitute.com
# REACT_APP_API_URL=https://api.kmmediatraininginstitute.com
# EMAIL_ENABLED=true
# DEBUG_ENABLED=false
# LOG_LEVEL=warn

# Staging Overrides (uncomment for staging)
# NODE_ENV=staging
# JWT_SECRET=your-staging-jwt-secret
# CORS_ORIGIN_STAGING=http://staging.kmmediatraininginstitute.com
# REACT_APP_API_URL=http://api-staging.kmmediatraininginstitute.com
# DEBUG_ENABLED=true
# LOG_LEVEL=debug

